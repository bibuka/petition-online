<h1>Create an petition</h1>
<%= render 'shared/errors', obj: @petition %>
<div class="row">
 <div class="col-12">
<%= form_for(@petition,:html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
 <div class="control-label col-12">
    <%= f.label :title %><br>
    </div>
    <div class="col-12">
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-12">
      <%= f.label :Organisation %><br>
      </div>
      <div class="col-12">
      <%= f.text_field :title, class: "form-control", placeholder: "Organisation", autofocus: true %>
     </div>
    </div>
  <div class="form-group">
    <div class="control-label col-12">
     <%= f.label :description %>
    </div>
    <div class="col-12">
     <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
   </div>
   <div class="form-group">
    <div class="offset-10 col-2">
     <%= f.submit class: 'btn btn-primary btn-large' %>
    </div>
   </div>
       User ID:<%= current_user.id %> <br>
       User Name: <%= current_user.username %>
       <%= f.hidden_field :user_id, value: current_user.id%>
   <% end %>

<%= link_to 'Back', petitions_path %>
 </div>
</div>
