
<div class="page-header">

<h1>Listing all petitions</h1>
</div>
<% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<div class="row">
  <% @petitions.each do |petition| %>
<div class="col-md-12">
  <div class="petition__card ">
    <div class="petition__card__id">
      Petition number: #<%= petition.id%>
    </div>
    <div class="petition__card__title">
      <%= petition.title %>
    </div>
    <div class="petition__card__description">
      <%= petition.description %>
    </div>
    <div class="petition__card__actions mt-2">
      <%= link_to 'View more..', petition_path(petition), :class=>"btn btn-outline-info" %>
    </div>


  </div>
</div>
  <% end %>

</div>
<div class="row">
  <div class="mx-auto">
      <%= will_paginate @petitions,renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>

</div>
