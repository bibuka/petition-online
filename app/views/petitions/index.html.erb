<div class="page-header">
<h1>Listing all petitions</h1>
</div>
<% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Panel heading</div>
<table class="table">
 <tr>
   <th>#</th>
  <th>Title</th>
  <th colspan="3">Description</th>
 </tr>
 <% @petitions.each do |petition| %>
 <tr>
   <td><%= petition.id%></td>
  <td><%= petition.title %></td>
  <td><%= petition.description %></td>
  <td><%= link_to 'Show', petition_path(petition) %></td>
  <td><%= link_to 'Delete', petition_path(petition), method: :delete, data: {confirm: "Are you sure?"} %></td>
 </tr>
 <% end %>
</table>
</div>

<hr>
  <%= link_to "Create new petition", new_petition_path %>
