<% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<h2 align="center">Title: <%= @petition.title %></h2>
<div class="well">
<ul class="nav nav-tabs role="tablist"">
  <li role="presentation" class="active"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Text of petition</a></li>
  <li role="presentation"><a href="#subscribers" aria-controls="subscribers" role="tab" data-toggle="tab">Subscribers</a></li>
  <li role="presentation"><a href="#answer" aria-controls="answer" role="tab" data-toggle="tab">Answer</a></li>
</ul>
<div class="tab-content">
   <div role="tabpanel" class="tab-pane active" id="description">
     <br>
     <p>
       <%= @petition.description %>
     </p>
   </div>
   <div role="tabpanel" class="tab-pane" id="subscribers">...</div>
   <div role="tabpanel" class="tab-pane" id="answer">...</div>
 </div>
 <hr>
 <%= link_to "Show all petitions", petitions_path, class: "btn btn-xs btn-success"  %>
 <%= link_to "Delete", petition_path(@petition), method: :delete, data: { confirm: "Are you sure you want to delete this petition?"}, class: "btn btn-xs btn-danger" %>
</div>
